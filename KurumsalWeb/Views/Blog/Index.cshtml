@model IEnumerable<KurumsalWeb.Models.Model.Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
    
<script>
    $(document).ready(function () {
        $('#myTable').DataTable();
    });
</script>
<h2>Blog Posts</h2>

<a class="btn btn-default" href="/Blog/Create/">Add New Blog</a>

<table class="table table-striped" id="myTable">
    <thead>
        <tr>
            <th>#</th>
            <th>Title</th>
            <th>Category</th>
            <th>ImageURL</th>
            <th>Operations</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.BlogId</td>
                <td>@item.Title</td>
                <td>@item.Category.CategoryName</td>
                <td><img src="@item.ImageURL" width="100" height="100" /></td>
                <td><a href="/Blog/Edit/@item.BlogId">Update</a> | <a href="/Blog/Delete/@item.BlogId">Delete</a></td>
            </tr>
        }

    </tbody>
</table>